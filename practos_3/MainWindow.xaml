<Window x:Class="practos_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practos_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,10,10,0">
        <DataGrid x:Name="datasetik" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Users.UserName}"/>
                <DataGridTextColumn Binding="{Binding Users.Email}"/>
                <DataGridTextColumn Binding="{Binding AddressLine}"/>
                <DataGridTextColumn Binding="{Binding City}"/>
                <DataGridTextColumn Binding="{Binding PostalCode}"/>
                <DataGridTextColumn Binding="{Binding Orders.OrderDate}"/>
                <DataGridTextColumn Binding="{Binding Orders.TotalAmount}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
